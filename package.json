{
  "name": "@willsoto/vue-remark",
  "version": "1.0.0",
  "license": "Apache-2.0",
  "sideEffects": false,
  "main": "./dist/VueRemark.umd.js",
  "typings": "./typings/vue-remark.d.ts",
  "files": [
    "dist",
    "lib",
    "typings"
  ],
  "scripts": {
    "prebuild": "rimraf dist typings",
    "build": "vue-cli-service build --target lib --name VueRemark lib/vue-remark.ts",
    "postbuild": "npm run typings",
    "lint": "vue-cli-service lint",
    "prerelease": "npm run build",
    "release": "standard-version --sign",
    "postrelease": "git push --follow-tags origin main",
    "serve": "vue-cli-service serve",
    "start": "npm run serve",
    "test": "npm run test:unit && npm run test:e2e -- --headless",
    "test:cov": "npm run test:unit -- --coverage && npm run test:e2e -- --headless",
    "test:e2e": "vue-cli-service test:e2e",
    "test:unit": "vue-cli-service test:unit",
    "typings": "tsc --project tsconfig.build.json --declaration --declarationDir typings --emitDeclarationOnly"
  },
  "lint-staged": {
    "*.{js,ts,vue,yaml,yml,json}": [
      "prettier --write"
    ],
    "*.{js,vue,ts}": [
      "vue-cli-service lint"
    ]
  },
  "browserslist": [
    "> 20%"
  ],
  "eslintConfig": {
    "env": {
      "node": true
    },
    "parserOptions": {
      "parser": "@typescript-eslint/parser"
    },
    "extends": [
      "plugin:vue/essential",
      "@vue/prettier",
      "@vue/typescript"
    ],
    "rules": {},
    "root": true
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "vue",
      "ts",
      "tsx"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/lib/$1"
    },
    "snapshotSerializers": [
      "jest-serializer-vue"
    ],
    "testMatch": [
      "**/tests/unit/**/*.spec.(js|jsx|ts|tsx)|**/__tests__/*.(js|jsx|ts|tsx)"
    ],
    "testURL": "http://localhost/",
    "transform": {
      ".+\\.(css|styl|less|sass|scss|svg|png|jpg|ttf|woff|woff2)$": "jest-transform-stub",
      "^.+\\.tsx?$": "ts-jest",
      "^.+\\.vue$": "vue-jest"
    }
  },
  "dependencies": {
    "lodash.flatmap": "~4.5.0",
    "lodash.get": "~4.4.2",
    "rehype-stringify": "~8.0.0",
    "remark-gfm": "~1.0.0",
    "remark-parse": "~9.0.0",
    "unified": "~9.2.1",
    "vue-class-component": "~7.2.6"
  },
  "devDependencies": {
    "@types/jest": "~26.0.20",
    "@types/lodash.flatmap": "~4.5.6",
    "@types/lodash.get": "~4.4.6",
    "@typescript-eslint/eslint-plugin": "~4.17.0",
    "@typescript-eslint/parser": "~4.17.0",
    "@vue/cli-plugin-e2e-cypress": "~4.5.11",
    "@vue/cli-plugin-eslint": "~4.5.11",
    "@vue/cli-plugin-typescript": "~4.5.11",
    "@vue/cli-plugin-unit-jest": "~4.5.12",
    "@vue/cli-service": "~4.5.11",
    "@vue/eslint-config-prettier": "~6.0.0",
    "@vue/eslint-config-typescript": "~7.0.0",
    "@vue/test-utils": "~1.1.3",
    "babel-eslint": "~10.1.0",
    "eslint": "~7.22.0",
    "eslint-plugin-cypress": "~2.11.2",
    "eslint-plugin-prettier": "~3.3.1",
    "eslint-plugin-vue": "~7.7.0",
    "lint-staged": "~10.5.4",
    "prettier": "~2.2.1",
    "prettier-plugin-organize-imports": "~1.1.1",
    "prettier-plugin-packagejson": "~2.2.10",
    "raw-loader": "~4.0.2",
    "remark-shortcodes": "~0.3.1",
    "rimraf": "~3.0.2",
    "standard-version": "~9.1.1",
    "ts-jest": "~26.5.3",
    "tslib": "~2.1.0",
    "typescript": "~4.2.3",
    "vue": "~2.6.12",
    "vue-template-compiler": "~2.6.12"
  },
  "peerDependencies": {
    "vue": ">=2.6.12"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "volta": {
    "node": "14.16.0",
    "npm": "7.6.3"
  }
}
